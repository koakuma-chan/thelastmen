---
import { ViewTransitions } from "astro:transitions";

import "@fontsource/libre-baskerville";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Explore the depths of modern information, challenging your values and embracing the pursuit of deeper truths. For those ready to seek profound insights in the chaos of the news."
    />
    <title>The Last Men</title>
    <ViewTransitions />
  </head>
  <body>
    <div
      class="min-h-screen bg-black text-neutral-100 selection:bg-neutral-400"
    >
      <div
        class="fixed inset-0 opacity-[6.9%] overflow-hidden pointer-events-none"
      >
        <svg
          class="h-full xl:h-auto"
          viewBox="0 0 666 666"
          xmlns="http://www.w3.org/2000/svg"
        >
          <filter id="noise">
            <feTurbulence
              type="fractalNoise"
              baseFrequency="18"
              numOctaves="3"
              stitchTiles="stitch"
            />
          </filter>

          <rect width="666" height="666" filter="url(#noise)" />
        </svg>
      </div>

      <div class="container mx-auto py-12 space-y-12">
        <nav class="text-center">
          <a href="/">
            <span class="text-4xl font-libre">
              T<span class="inline-block translate-y-1">h</span>eLa<span
                class="inline-block translate-y-1"
              >s</span>tM<span
                class="inline-block translate-y-1 -translate-x-0.5"
              >e</span>n
            </span>
          </a>
        </nav>

        <div class="px-8">
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>
